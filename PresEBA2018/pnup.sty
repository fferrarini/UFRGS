% Style for printing multiple pages using Beamer
% with a space for Notes
%
\RequirePackage{pgfpages}

\pgfpagesdeclarelayout{3 on 1 with notes} {
   \edef\pgfpageoptionheight{\the\paperheight}
   \edef\pgfpageoptionwidth{\the\paperwidth}
   \edef\pgfpageoptionborder{0pt}
}
{
   \pgfpagesphysicalpageoptions
   {%
     logical pages=6,%
     physical height=\pgfpageoptionheight,%
     physical width=\pgfpageoptionwidth,%
     last logical shipout=3%
   }
   \pgfpageslogicalpageoptions{1}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.25\pgfphysicalwidth}{.8333333
\pgfphysicalheight},%
%     border code=\pgfusepath{stroke}
   }%
   \pgfpageslogicalpageoptions{2}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.25\pgfphysicalwidth}{.5\pgfphysicalheight},%
%     border code=\pgfusepath{stroke}%
   }%
   \pgfpageslogicalpageoptions{3}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.25\pgfphysicalwidth}{.1666666
\pgfphysicalheight},%
%     border code=\pgfusepath{stroke}%
   }%
   \pgfpageslogicalpageoptions{4}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.75\pgfphysicalwidth}{.8333333
\pgfphysicalheight},%
     copy from=4
   }%
   \pgfpageslogicalpageoptions{5}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.75\pgfphysicalwidth}{.5\pgfphysicalheight},%
     copy from=5
   }%
   \pgfpageslogicalpageoptions{6}
   {%
     border shrink=\pgfpageoptionborder,%
     resized width=.5\pgfphysicalwidth,%
     resized height=.3333\pgfphysicalheight,%
     center=\pgfpoint{.75\pgfphysicalwidth}{.1666666
\pgfphysicalheight},%
     copy from=6
   }%
   \AtBeginDocument{
     \newbox\notesbox
     \setbox\notesbox=\vbox{
       \hsize=\paperwidth
       \vskip-1in\hskip-1in\vbox{
       %  \vskip0.2cm
       Notas\vskip1cm
       \bgroup \color{gray}
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth\vskip0.8cm
       \hrule width0.9\paperwidth
       \egroup
       }
     }
     \pgfpagesshipoutlogicalpage{4}\copy\notesbox
     \pgfpagesshipoutlogicalpage{5}\copy\notesbox
     \pgfpagesshipoutlogicalpage{6}\copy\notesbox
   }
}


